<!DOCTYPE html>
<html lang="en" ng-app="obie">
  <head>
      <% include ../templates/head.ejs %>
  </head>

  <body ng-controller="controller" ng-init="init()">

    <% include ../templates/header.ejs %>


    <!-- Insert Body here -->
	<div class="container-fluid">
      <div class="offset-md-2 col-md-8 page-header">
        <h2>{{userName}}'s History</h2>
      </div>
      <div class="row panel-container">
        <div class="offset-sm-1 col-sm-10 offset-md-0 col-md-3 offset-lg-0 col-lg-3">
          <div class="panel">
            <div class="panel-header">
              My period history
            </div>
            <div class="panel-body">
              <div ng-show="hasUserPeriods">

                <button type="button" class="btn btn-light" ng-repeat="period in userPeriods" ng-value="period.period.id">
                  Period on:
                  <span class="badge badge-primary">{{period.period.startDate}} </span>
                </button>

              </div>
              <div ng-show="!hasUserPeriods">
                No period history for user
              </div>
            </div>
          </div>
        </div>
        <div class="offset-sm-1 col-sm-10 offset-md-0 col-md-3 offset-lg-0 col-lg-3">
          <div class="panel">
            <div class="panel-header">
              My prescription history
            </div>
            <div class="panel-body">
              <div ng-show="hasUserPrescriptions">

                <button type="button" class="btn btn-light"
                  ng-repeat="prescription in userPrescriptions" ng-value="prescription.prescription.id">
                  {{prescription.prescription.name}}
                  <span class="badge badge-primary">{{prescription.prescription.startDate}} </span>
                </button>

              </div>
              <div ng-show="!hasUserPrescriptions">
                No prescription history for user
              </div>

            </div>
          </div>
        </div>
        <div class="offset-sm-1 col-sm-10 offset-md-0 col-md-6 offset-lg-0 col-lg-6">
          <div class="panel">
            <div class="panel-header">
              My stats
            </div>
            <div class="panel-body">
              <div ng-show="hasUserStats">
                User stats coming soon...
              </div>
              <div ng-show="!hasUserStats">
                No stats recorded for user
              </div>
            </div>
          </div>
        </div>
      </div>
	</div>

    <% include ../templates/footer.ejs %>
    <script src="resources/js/history.js"></script>
  </body>
</html>
