<!DOCTYPE html>
<html lang="en" ng-app="obie">
  <head>
      <% include ../templates/head.ejs %>
  </head>

  <body ng-controller="controller" ng-init="init()">

    <% include ../templates/header.ejs %>


    <!-- Insert Body here -->
	<div class="container-fluid">
      <div class="offset-md-2 col-md-8 page-header">
        <h2>{{userName}}'s History</h2>
      </div>
      <div class="row panel-container">
        <div class="offset-sm-1 col-sm-10 offset-md-0 col-md-3 offset-lg-0 col-lg-3">
          <div class="panel">
            <div class="panel-header">
              My period history
            </div>
            <div class="panel-body">
              <div ng-show="hasUserPeriods">

                <button type="button" class="btn btn-light" ng-repeat="period in userPeriods" ng-click="getPeriodSymptoms(period.period.periodId, period.period.startDate)">
                  Period on:
                  <span class="badge badge-primary">{{period.period.startDate}} </span>
                </button>
                <div ng-show="periodSymptoms">
                  <h5>Symptoms for period starting on {{periodStart}}</h5>
                  <div ng-repeat="sympt in periodSymptoms">
                    <strong>Symptom recorded on: {{sympt.periodSymptom.date}}</strong>
                    <div class="symptoms">
                      <div class="sypmtom">
                        Spotting: {{sympt.periodSymptom.cramps}}
                      </div>
                      <div class="sypmtom">
                        Nausea: {{sympt.periodSymptom.nausea}}
                      </div>
                      <div class="sypmtom">
                        Headache: {{sympt.periodSymptom.headache}}
                      </div>
                      <div class="sypmtom">
                        Flow: {{sympt.periodSymptom.flow}}
                      </div>
                      <div class="sypmtom">
                        Lower Back Pain: {{sympt.periodSymptom.backPain}}
                      </div>
                      <div class="sypmtom">
                        Bloating: {{sympt.periodSymptom.bloating}}
                      </div>
                      <div class="sypmtom">
                        Notes: {{sympt.periodSymptom.notes}}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div ng-show="!hasUserPeriods">
                No period history for user
              </div>
            </div>
          </div>
        </div>
        <div class="offset-sm-1 col-sm-10 offset-md-0 col-md-3 offset-lg-0 col-lg-3">
          <div class="panel">
            <div class="panel-header">
              My prescription history
            </div>
            <div class="panel-body">
              <div ng-show="hasUserPrescriptions">

                <button type="button" class="btn btn-light"
                  ng-repeat="prescription in userPrescriptions" ng-click="getPrescriptionSymptoms(prescription.prescription.prescriptionId, prescription.prescription.name)">
                  {{prescription.prescription.name}}
                  <span class="badge badge-primary">{{prescription.prescription.startDate}} </span>
                </button>
                <div ng-show="prescriptionSymptoms">
                  <h5>Symptoms for {{prescriptionName}}</h5>
                  <div ng-repeat="sympt in prescriptionSymptoms">
                    <strong>Symptom recorded on: {{sympt.prescriptionSymptom.date}}</strong>
                    <div class="symptoms">
                      <div class="sypmtom">
                        Spotting: {{sympt.prescriptionSymptom.spotting}}
                      </div>
                      <div class="sypmtom">
                        Nausea: {{sympt.prescriptionSymptom.nausea}}
                      </div>
                      <div class="sypmtom">
                        Headache: {{sympt.prescriptionSymptom.headache}}
                      </div>
                      <div class="sypmtom">
                        Sore Breasts: {{sympt.prescriptionSymptom.soreBreasts}}
                      </div>
                      <div class="sypmtom">
                        Mood Swings: {{sympt.prescriptionSymptom.moodSwings}}
                      </div>
                      <div class="sypmtom">
                        Notes: {{sympt.prescriptionSymptom.notes}}
                      </div>
                    </div>
                  </div>
                </div>
              </div>
              <div ng-show="!hasUserPrescriptions">
                No prescription history for user
              </div>

            </div>
          </div>
        </div>
        <div class="offset-sm-1 col-sm-10 offset-md-0 col-md-6 offset-lg-0 col-lg-6">
          <div class="panel">
            <div class="panel-header">
              My stats
            </div>
            <div class="panel-body">
              <div ng-show="hasUserStats">
                User stats coming soon...
              </div>
              <div ng-show="!hasUserStats">
                No stats recorded for user
              </div>
            </div>
          </div>
        </div>
      </div>
	</div>

    <% include ../templates/footer.ejs %>
    <script src="resources/js/history.js"></script>
  </body>
</html>
