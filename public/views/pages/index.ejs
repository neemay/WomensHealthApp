<!DOCTYPE html>
<html lang="en" ng-app="obie">
  <head>
      <% include ../templates/head.ejs %>
  </head>

  <body ng-controller="controller" ng-init="init()">
    <div class="container">
      <div class="jumbotron text-center">
        <div align="center" class="col-md-12">
          <h2>Welcome to</h2>
          <div class="logo-container"><img class="logo" src="../../resources/images/navbar-logo.png"/></div>
		  <p style="font-size:120%">Obie is a new reproductive health tracking application that aims to empower users by helping them track and visualize important reproductive health information.<p>
		  <p style="font-size:90%">Obie is not exclusive to (cis) women and aims to be inclusive to anyone that experiences menstruation or takes oral birth control pills.<p>
		  <hr>
		  <button class="btn btn-secondary btn-inline" data-toggle="modal" data-target="#loginModal">Login</button>
		  <button class="btn btn-primary btn-inline" data-toggle="modal" data-target="#signupModal">Sign up</button>
        </div>
      </div>
    </div>
    <!--  Modals  -->
    <div class="modal fade" id="signupModal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3>Sign up</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <% if (signupMessage.length > 0) { %>
              <div class="alert alert-danger"><%= signupMessage %></div>
            <% } %>
            <form class="form-container" action="/signup" method="post">
              <div>
                <div class="form-group">
                  <label for="name">Preferred Name:</label>
                  <input name="name" type="text" class="form-control" required/>
                </div>
                <div class="form-group">
                  <label for="email">Email:</label>
                  <input name="email" type="email" class="form-control" required/>
                </div>
                <div class="form-group">
                  <label for="password">Password:</label>
                  <input name="password" ng-model="newPassword" type="password" class="form-control" />
                </div>
              </div>
              <button type="submit" class="btn btn-primary btn-inline">Create</button>
              <button type="button" class="btn btn-danger btn-inline" id="cancel" data-dismiss="modal">Cancel</button>
            </form>
          </div>
        </div>
      </div>
    </div>
	
    <!--  Login modal  -->
    <div class="modal fade" id="loginModal">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h3>Log in</h3>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <% if (loginMessage.length > 0) { %>
              <div class="alert alert-danger"><%= loginMessage %></div>
            <% } %>
            <form class="form-container" action="/login" method="post">
              <div class="form-group">
                <label>Email</label>
                <input type="text" class="form-control" name="email">
              </div>
              <div class="form-group">
                <label>Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-primary">Login</button>
            </form>
          </div>
        </div>
      </div>
    </div>
    <% include ../templates/footer.ejs %>
    <script src="resources/js/index.js"></script>
  </body>
</html>
